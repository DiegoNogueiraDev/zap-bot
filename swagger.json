{
    "openapi": "3.0.0",
    "info": {
      "title": "WhatsApp API Service",
      "version": "1.0.0",
      "description": "API documentation for WhatsApp service using Baileys"
    },
    "servers": [
      {
        "url": "http://localhost:3000",
        "description": "Development server"
      }
    ],
    "paths": {
      "/api/whatsapp/send": {
        "post": {
          "summary": "Send WhatsApp message",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "to": {
                      "type": "string",
                      "description": "Recipient's phone number with @s.whatsapp.net"
                    },
                    "message": {
                      "type": "string",
                      "description": "Message content"
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Message sent successfully"
            },
            "500": {
              "description": "Server error"
            }
          }
        }
      }
    }
  }